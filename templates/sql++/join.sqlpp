use test;

select element {
'uname': user.name,
'alias': user.alias,
'send_time': message.send_time,
'message': substring(message.message, 1, 31)
}
from GleambookUsers as user,
     GleambookMessages as message
where message.author_id = user.id and
      message.send_time >= $1 and
      message.send_time < $2;
